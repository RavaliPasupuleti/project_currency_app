<Label>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 1


BoxLayout:
    orientation: 'vertical'
    Label:
        id: current_trip_location
        text: "Current trip Location \nBelgium"
        font_size: 24
        halign: 'center'
        valign: 'middle'
        size_hint_y: 0.2


    BoxLayout:
        size_hint_y: 0.15
        orientation: 'horizontal'
        Spinner:
            id: state_selection
            text: app.current_state
            # values takes a list - could be a literal here or variable in app
            values: app.state_codes
            # on_text is the event (not on_release) when the text updates (spinner option is selected)
            # note that on_text runs even when the text is set for the very first time
            on_text: app.change_state(self.text)
        TextInput:
            id: from_country_currency_amount
            font_size: 24
            color: (1, 1, 0.9, 1)

    BoxLayout:
        size_hint_y: 0.15
        orientation: 'horizontal'
        Label:
            id: home_country
            text: 'Austrailia'
        TextInput:
            id: home_country_currency_amount
            font_size: 24
            color: (1, 1, 0.9, 1)

    Label:
        id: date_today
        text: 'Today is : \n 2015/06/02'
        font_size: 36
        size_hint_y: 0.3
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: 0.99, 0.65, 0.07, 1
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        size_hint_y: 0.15
        orientation: 'horizontal'
        Label:
            id: trip_detail_info
            text: ''
            halign: 'center'
            valign: 'middle'

        Button:
            id: update_currency
            font_size: 24
            text: 'Update Currency'
            on_press: app.button_pressed(self)
            color: (1, 1, 0.9, 1)